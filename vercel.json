{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install --include=dev",
  "outputDirectory": "dist/public",
  "functions": {
    "api/handler.js": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/handler.js" },
    { "source": "/(.*)", "destination": "/api/handler.js" }
  ]
}
